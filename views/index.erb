<html>
  <head>
    <title>Random Number</title>
  </head>
  <body>
    <form>
      <input type='text' name='guess' />
      <input type='submit' value='Guess!' />
    </form>
    <p>
      <%= feedback %>
      <% if guess == number %>
        The secret number is <%= number %>
      <% end %>
    </p>
  </body>
</html>